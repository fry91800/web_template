{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,  // This is necessary for using decorators
    "emitDecoratorMetadata": true,  // Ensures that metadata required by Sequelize
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/interfaces/request.interface.d.ts",
    "src/interfaces/response.interface.d.ts"],
  "exclude": [
    "node_modules"
  ]
}
